@model UserViewModel

@{
	Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<!-- DataTables Example -->
	<div class="card mb-3">
		<div class="card-header">
			<i class="fas fa-table"></i>
			Elanlar
		</div>
		<div class="card-body">
			<div class="table-responsive-sm">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Vezife</th>
                            <th>Email</th>
                            <th>Şəhər/Mobil</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.UserName</td>
                            <td identity-user="@Model.Id"></td>
                            <td>@Model.Email</td>
                            <td>@Model.Phone</td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr>
                            <th colspan="4">Qalereya</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            @foreach (var item in Model.PublishedAnnounces)
                            {
                                <td>
                                    <div class="card text-center">
                                        <img class="card-img-top" src="@item.ActivePhoto.Path"
                                             alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text">@item.AddedDate.Value.ToString("dd-MM-yyyy")</p>
                                            <p class="card-text">@item.AddedPublishDate.Value.ToString("dd-MM-yyyy")</p>
                                        </div>
                                        <div class="card-footer text-muted">
                                            <p class="card-text">@item.AnnouncePinCode</p>
                                        </div>
                                    </div>
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
			</div>
		</div>
	</div>
</div>
