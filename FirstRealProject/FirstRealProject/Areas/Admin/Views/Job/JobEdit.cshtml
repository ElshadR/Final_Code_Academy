@model JobEditModel
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Job";
}

<h4 class="ml-4">İş</h4>

<div class="container-fluid">
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Elana duzelish et
        </div>
        <div class="card-body">
            <div class="table-responsive-sm">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th colspan="4">Xanaları doldurun</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="card text-center">

                                    <div class="card-body">
                                        <div class="row justify-content-center align-items-center">
                                            <div class="col-10 col-md-5 ">
                                                <form asp-area="Admin" asp-controller="job" asp-action="jobedit" method="post">
                                                    <input type="hidden" name="id" value="@Model.Id" />
                                                    <input type="hidden" name="appuserid" value="@Model.AppUserId" />
                                                    <input type="hidden" name="findtable" value="@Model.FindTable" />
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Şəhər</label>
                                                        <select id="inputState" class="form-control col-12 col-md-7" asp-for="CityId">
                                                            @foreach (var item in Model.Cities)
                                                            {
                                                                if (Model.CityId == item.Id)
                                                                {
                                                                    <option selected value="@item.Id">@item.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Elanın növü</label>
                                                        <select id="inputState" class="form-control col-12 col-md-7" asp-for="JobTypeId">
                                                            @foreach (var item in Model.JobTypes)
                                                            {
                                                                if (Model.JobTypeId == item.Id)
                                                                {
                                                                    <option selected value="@item.Id">@item.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Fəaliyyət sahəsi</label>
                                                        <select id="inputState" class="form-control col-12 col-md-7" asp-for="ActivityAreaId">
                                                            @foreach (var item in Model.ActivityAreas)
                                                            {
                                                                if (Model.ActivityAreaId == item.Id)
                                                                {
                                                                    <option selected value="@item.Id">@item.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Kimə məxsusdu</label>
                                                        <select id="inputState" class="form-control col-12 col-md-7" asp-for="PaymentTypeId">
                                                            @foreach (var item in Model.PaymentTypes)
                                                            {
                                                                if (Model.PaymentTypeId == item.Id)
                                                                {
                                                                    <option selected value="@item.Id">@item.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Maaş</label>
                                                        <input type="number" asp-for="Price" class="form-control col-12 col-md-7">
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Elanın adı</label>
                                                        <input type="text" asp-for="AnnounceName" class="form-control col-12 col-md-7">
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Elanın tipi</label>
                                                        <select id="inputState" class="form-control col-12 col-md-7" asp-for="AnnounceTypeId">
                                                            @foreach (var item in Model.AnnounceTypes)
                                                            {
                                                                if (Model.AnnounceTypeId == item.Id)
                                                                {
                                                                    <option selected value="@item.Id">@item.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Person type</label>
                                                        <select id="inputState" class="form-control col-12 col-md-7" asp-for="PersonTypeId">
                                                            @foreach (var item in Model.PersonTypes)
                                                            {
                                                                if (Model.PersonTypeId == item.Id)
                                                                {
                                                                    <option selected value="@item.Id">@item.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@item.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Email</label>
                                                        <input type="text" asp-for="Email" class="form-control col-12 col-md-7">
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Number</label>
                                                        <input type="text" asp-for="PhoneNumber" class="form-control col-12 col-md-7">
                                                    </div>
                                                    <div class="form-group row">
                                                        <label for="inputState" class="col-12 col-md-5 col-form-label">Description</label>
                                                        <textarea id="commentDescription" asp-for="Description" required cols="44" rows="5"></textarea>
                                                    </div>
                                                    <div class="form-group row justify-content-end">
                                                        <div class="form-check col-12 col-md-4">
                                                            <input type="checkbox" asp-for="AnnounceCheckIn" class="form-control  col-12 col-md-7">
                                                            <label class="form-check-label col-11 col-md-9">
                                                                Yoxlanıldı
                                                            </label>
                                                        </div>
                                                        <div class="form-check col-12 col-md-4">
                                                            <input type="checkbox" asp-for="AnnouncePublished" class="form-control col-12 col-md-7">
                                                            <label class="form-check-label col-11 col-md-9" for="gridCheck">
                                                                Derc olunsunmu?
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="container">
                                                        <h2>Gallery</h2>
                                                        <div class="row">
                                                            @foreach (var item in Model.JobPhotos)
                                                            {
                                                                <div class="col-md-4">
                                                                    <div class="thumbnail">
                                                                        <a id="announcePhotoA" href="">
                                                                            <img src="@item.Path" alt="Lights" style="width:100%">

                                                                        </a>
                                                                        <div class="caption">
                                                                            <span style="cursor :pointer;padding:2px 5px;background:#c33;" data-id="@Model.Id" data-findtable="@Model.FindTable" data-photoid="@item.Id" id="deletePhoto">delete</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="form-group ">
                                                        <div class="col-auto">
                                                            <button type="submit" class="btn btn-success mb-2">Yadda saxla</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>